<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="match_parent"
    tools:context=".Search">

    <LinearLayout
        android:id="@+id/searcha"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <EditText
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:layout_height="match_parent"
            >
        </EditText>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searcha">

        <HorizontalScrollView
            android:id="@+id/mainimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="410dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="7dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/videoplayer"
                        android:layout_width="410dp"
                        android:layout_height="200dp"
                        android:background="@drawable/b1"
                        android:padding="0dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="410dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="410dp"
                        android:layout_height="200dp"
                        android:background="@drawable/b2"
                        android:padding="0dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="410dp"
                    android:layout_height="200dp"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="410dp"
                        android:layout_height="200dp"
                        android:background="@drawable/b3"
                        android:padding="0dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/makevideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        android:text="#makevideos"
        android:textSize="20dp" />

    <HorizontalScrollView
        android:id="@+id/scrollmake"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_below="@+id/makevideo"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/onepic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/twopic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/threepic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollmake"
        android:id="@+id/timefor"
        android:layout_marginLeft="10dp"
        android:text="#timeformelodee"
        android:textSize="20dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/timeme"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_below="@+id/timefor"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/fourpic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/sqmain"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/backhead"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_below="@+id/timeme"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/onepic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/twopic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/threepic"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>